<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_Roadkill_MainTurret</defName>
		<label>high-explosive shell</label>
		<thingClass>Projectile_Explosive</thingClass>
		
		<graphicData>
			<texPath>Things/Projectile/ShellHighExplosive</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		
		<projectile>
			<damageDef>Bomb</damageDef>
			<!-- damage amount is the damage def default -->
			<speed>70</speed>
			<explosionRadius>3.9</explosionRadius>
			<soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
			<soundExplode>MortarBomb_Explode</soundExplode>
			<soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
			<soundAmbient>MortarRound_Ambient</soundAmbient>
		</projectile>
	</ThingDef>

	<Vehicles.VehicleTurretDef Name="TankMainTurret" ParentName="TurretBase">
		<defName>Roadkill_MainTurret</defName>
		<label>Main Turret</label>
		<turretType>Rotatable</turretType>
		<shotSound>Explosion_PirateCannon</shotSound> <!-- Needs New Sound -->
		<reloadSound>Artillery_ShellLoaded</reloadSound>
		
		<projectile>Bullet_Roadkill_MainTurret</projectile>
		<reloadTimer>3.4</reloadTimer>
		<warmUpTimer>4.5</warmUpTimer>
		<magazineCapacity>1</magazineCapacity>
		<ammoCountPerCharge>5</ammoCountPerCharge>
		<genericAmmo>true</genericAmmo>
		
		<recoil>
			<distanceTotal>0.7</distanceTotal>
			<distancePerTick>0.15</distancePerTick>
			<speedMultiplierPostRecoil>0.35</speedMultiplierPostRecoil>
		</recoil>
		
		<vehicleRecoil>
			<distanceTotal>0.35</distanceTotal>
			<distancePerTick>0.15</distancePerTick>
			<speedMultiplierPostRecoil>0.75</speedMultiplierPostRecoil>
		</vehicleRecoil>
		
		<attachProjectileFlag>VVE_Tank</attachProjectileFlag>
		
		<fireModes>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<ticksBetweenBursts>1</ticksBetweenBursts>
				<spreadRadius>3</spreadRadius>
				<label>Single Shot</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
		</fireModes>
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>1.2</rotationSpeed>

		<graphicData>
			<texPath>Things/Vehicles/Tier1/Tier1_Tank/Tier1_Tank_CannonTop</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(4, 4)</drawSize>
		</graphicData>
		
		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
		
		<motes>
			<li>
				<cycles>1</cycles>
				<moteDef>Mote_CannonPlume</moteDef>
				<animationType>Reset</animationType>
			</li>
		</motes>
		
		<projectileOffset>4.5</projectileOffset>
		<hitFlags>IntendedTarget</hitFlags>
		<maxRange>32.9</maxRange>
		<minRange>3</minRange>
	</Vehicles.VehicleTurretDef>
</Defs>