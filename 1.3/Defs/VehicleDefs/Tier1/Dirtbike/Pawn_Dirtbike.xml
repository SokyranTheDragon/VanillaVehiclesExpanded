<?xml version="1.0" encoding="utf-8" ?>

<Defs>	
	<Vehicles.VehicleDef ParentName="VehiclePawn_Mechanical">
		<defName>VVE_Dirtbike</defName>
		<label>Dirtbike</label>
		<description>A nice, small, almost portable piece of transportation, the Dirtbike can get you, and only you, to your destination both quickly and quietly. Performs equally well in practically any terrain other than the cold, it’s the ideal choice when you need to travel a long distance off the beaten path. Don’t expect it to carry anything and an ambitious trek can leave you stranded.</description>
		
		<graphicData>
			<texPath>Things/Vehicles/Tier1/Tier1_Motorbike/Tier1_Motorbike</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(2,2)</drawSize>
			<drawOffset>(0,0,0.25)</drawOffset>
			<color>(150, 10, 0)</color>
			<colorTwo>(30, 50, 80)</colorTwo>
			<colorThree>(200, 200, 200)</colorThree>
		</graphicData>
		
		<fillPercent>0.2</fillPercent>
		
		<nameable>false</nameable>
		<buildDef>VVE_Dirtbike_Blueprint</buildDef>
		
		<size>(1,1)</size>
		<uiIconScale>1</uiIconScale>
		
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Transport</vehicleCategory>
		<techLevel>Industrial</techLevel>
		<vehicleType>Land</vehicleType>
				
		<statBases>
			<ArmorRating_Blunt>0.12</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.14</ArmorRating_Sharp>
			<Flammability>0.5</Flammability>
			<MarketValue>875</MarketValue>
		</statBases>
		
		<vehicleStats>
			<Mass>30</Mass>
			<MoveSpeed>12</MoveSpeed>
			<CargoCapacity>0</CargoCapacity>
			<RepairRate>1</RepairRate>
			<AccelerationRate>0.08</AccelerationRate>
		</vehicleStats>
		
		<soundSustainersOnEvent>
			<li>
				<key>(DraftOn, DraftOff)</key>
				<value>VVE_VehicleEngineBuggy</value>
			</li>
		</soundSustainersOnEvent>
		
		<soundOneShotsOnEvent Inherit = "False">
			<li>
				<key>DraftOn</key>
				<value>VVE_VehicleStart</value>
			</li>
			<li>
				<key>DraftOff</key>
				<value>VVE_VehicleStart</value>
			</li>
		</soundOneShotsOnEvent>
		
		<drawProperties>
			<displayOffsetNorth>(0, -0.2)</displayOffsetNorth>
			<displayOffsetEast>(-0.05, -0.2)</displayOffsetEast>
			<displayOffsetSouth>(0, -0.2)</displayOffsetSouth>
		</drawProperties>
		
		<properties>
			<diagonalRotation>false</diagonalRotation>
			<visibility>0.4</visibility>
			<worldSpeedMultiplier>1.2</worldSpeedMultiplier>
			<winterSpeedMultiplier>3.25</winterSpeedMultiplier>
			<manhunterTargetsVehicle>true</manhunterTargetsVehicle>
			
			<customSnowCosts>
				<li>
					<key>Thin</key>
					<value>8</value>
				</li>
				<li>
					<key>Medium</key>
					<value>16</value>
				</li>
				<li>
					<key>Thick</key>
					<value>24</value>
				</li>
			</customSnowCosts>
			
			<roles>
				<li>
					<key>rider</key>
					<label>Rider</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					
					<hitbox>
						<side>Body</side>
					</hitbox>
					
					<pawnRenderer>
						<layer>1</layer>
						<layerNorth>1</layerNorth>
						<layerSouth>-1</layerSouth>
						<angleNorth>0</angleNorth>
						<angleEast>0</angleEast>
						<angleNorthEast>0</angleNorthEast>
						<angleSouthEast>0</angleSouthEast>
						<drawOffsetNorth>(0,0,0.25)</drawOffsetNorth>
						<drawOffsetSouth>(0,0,0.5)</drawOffsetSouth>
						<drawOffsetEast>(0,0,0.25)</drawOffsetEast>
					</pawnRenderer>
				</li>
			</roles>
		</properties>
		
		<components>
			<li>
				<key>Body</key>
				<label>Body</label>
				<health>50</health>
				<armor>0.05</armor>
				
				<hitbox>
					<side>Body</side>
				</hitbox>
				
				<categories>
					<li>BodyIntegrity</li>
				</categories>
			</li>
			<li>
				<key>FrontWheel</key>
				<label>Front Wheel</label>
				<health>20</health>
				<tags>
					<li>Wheel</li>
				</tags>
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>BackWheel</key>
				<label>Back Wheel</label>
				<health>20</health>
				<tags>
					<li>Wheel</li>
				</tags>
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>Engine</key>
				<label>Engine</label>
				<health>25</health>
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>FrontSuspension</key>
				<label>Front Suspension</label>
				<health>10</health>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>BackSuspension</key>
				<label>Back Suspension</label>
				<health>10</health>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
		</components>

		<comps>
			<li Class="Vehicles.CompProperties_FueledTravel">
				<fuelType>Chemfuel</fuelType>
				<fuelConsumptionRate>12.5</fuelConsumptionRate>
				<fuelCapacity>30</fuelCapacity>
				<fuelConsumptionCondition>Drafted</fuelConsumptionCondition>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>